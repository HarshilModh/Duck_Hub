{{!-- views/userList.handlebars --}}

<div class="min-h-screen bg-stevensBg py-10">
  <div class="max-w-3xl mx-auto px-4">
    <h1 class="text-3xl font-heading text-stevensMaroon mb-6 text-center">
      User List
    </h1>

    {{#if users.length}}
      <ul class="bg-stevensWhite rounded-2xl shadow divide-y divide-gray-200 overflow-hidden">
        {{#each users}}
          <li class="flex items-center justify-between px-6 py-4 hover:bg-gray-50 transition">
            
            <!-- Avatar + User Info -->
            <div class="flex items-center space-x-4">
              <!-- Placeholder avatar -->
              <div class="h-10 w-10 bg-gray-200 rounded-full flex items-center justify-center text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                     viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M5.121 17.804A13.937 13.937 0 0112 15c2.59 0 5 .833
                           6.879 2.246M15 11a3 3 0 11-6 0 3 3 0 016 0zm6
                           2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-800">
                  {{this.firstName}} {{this.lastName}}
                </p>
                <p class="text-sm text-gray-500">{{this.email}}</p>
              </div>
            </div>

            <!-- Delete Button -->
            <form action="/users/deleteUser/{{this._id}}" method="POST" onsubmit="return confirm('Delete user {{this.firstName}} {{this.lastName}}?');">
                <input type="hidden" name="_method" value="DELETE">
              <button
                type="submit"
                class="inline-flex items-center bg-red-600 text-stevensWhite px-4 py-2 rounded-lg hover:bg-red-700 transition focus:outline-none focus:ring-2 focus:ring-red-300"
              >
                <!-- Trash icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                     viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 7l-.867 
                           12.142A2 2 0 0116.138 21H7.862a2 
                           2 0 01-1.995-1.858L5 
                           7m5 4v6m4-6v6M1
                           7h22M8 7V4a1 1 0 011-1h6a1 
                           1 0 011 1v3"/>
                </svg>
                Delete
              </button>
            </form>

          </li>
        {{/each}}
      </ul>
    {{else}}
      <p class="text-center italic text-stevensGray">No users found.</p>
    {{/if}}
  </div>
</div>
