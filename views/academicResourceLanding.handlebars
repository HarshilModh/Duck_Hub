<div class="section-heading-bar">
  <h2 id="sectionHeading">Academic Resources</h2>
  <div class="section-buttons">
    <a href="/academicResources/create" class="create-post-button">
      Create Academic Resource
    </a>
    {{#if isAdmin}}
      <a href="#" id="openTagModal" class="create-tag-button">
        Create Tag
      </a>
      {{!-- resCategory/create --}}
      <a href="/resCategory/create" class="create-tag-button">
        Create Category
      </a>
    {{/if}}
  </div>
</div>


<div class="forum-posts-list">
  {{#each academicResources}}
    <div class="forum-post-card">
      <!-- Report icon -->
      <div class="post-actions report-action">
        <button class="report-button" data-id="{{this._id}}" title="Report">
          <img
            src="/public/images/icons/exclamation-mark.png"
            alt="Report Icon"
            class="action-icon"
          />
        </button>
      </div>

      <!-- Delete icon (only for admins) -->
      <div class="post-actions delete-action">
        {{#if ../isAdmin}}
          <button
            class="delete-button"
            data-id="{{this._id}}"
            title="Delete Academic Resource"
          >
            <img
              src="/public/images/icons/bin.png"
              alt="Delete Icon"
              class="action-icon"
            />
          </button>
        {{/if}}
      </div>
    {{!-- add catagortname --}}
      {{#if this.category}}
        <p class="forum-category">
          Category: {{this.category.categoryName}}
        </p>
      {{/if}}
      <!-- Resource info -->
      <h3 class="forum-title">{{this.title}}</h3>
      <p class="forum-posted-by">
        Posted by: {{this.uploadedBy.firstName}} {{this.uploadedBy.lastName}}
      </p>

      {{#if this.tags.length}}
        <div class="tags">
          {{#each this.tags}}
            <span class="tag">{{this.name}}</span>
          {{/each}}
        </div>
      {{/if}}

      <!-- Description and link -->
      <p class="forum-content">{{this.description}}</p>
      <a
        class="forum-content"
        href="{{this.url}}"
        target="_blank"
        rel="noopener"
      >
        {{this.url}}
      </a>

      <!-- Upvote / Downvote -->
      <div class="vote-container">
        <button class="upvote-button" data-id="{{this._id}}">
          <img
            src="/public/images/icons/upVote.png"
            alt="Upvote"
            class="vote-icon"
          /><span>{{this.upVotes}}</span>
        </button>
        <button class="downvote-button" data-id="{{this._id}}">
          <img
            src="/public/images/icons/downVote.png"
            alt="Downvote"
            class="vote-icon"
          /><span>{{this.downVotes}}</span>
        </button>
      </div>
    </div>
  {{/each}}
</div>

<!-- REPORT MODAL -->
<div id="reportModal" class="modal-overlay" style="display:none;">
  <div class="modal-card">
    <h2>Report Content</h2>
    <form id="reportForm" action="/report/AcademicResource" method="post">
      <input type="hidden" name="contentId" id="reportContentId" />
      <input type="hidden" name="userId" value="{{loggedInUserId}}" />

      <label for="reportReason">Reason:</label>
      <textarea
        name="reason"
        id="reportReason"
        rows="4"
        required
        placeholder="Describe why you're reporting thisâ€¦"
      ></textarea>

      <div class="modal-buttons">
        <button type="button" id="reportCancel">Cancel</button>
        <button type="submit">Submit Report</button>
      </div>
    </form>
  </div>
</div>

<!-- TAG CREATION MODAL -->
<div id="tagModal" class="modal-overlay" style="display:none;">
  <div class="modal-card">
    <h2>Create New Tag</h2>
    <form id="tagForm" action="/academicResources/tag/create" method="post">
      <label for="tagName">Tag Name</label>
      <input
        type="text"
        id="tagName"
        name="name"
        placeholder="Enter tag name"
        required
        class="search-input"
        style="border-radius:0.375rem; margin-bottom:1rem;"
      />

      <div class="modal-buttons">
        <button type="button" id="tagCancel">Cancel</button>
        <button type="submit">Create</button>
      </div>
    </form>
  </div>
</div>

<script>
  const loggedInUserId = "{{loggedInUserId}}";
</script>
<script src="/public/js/academicResourceLanding.js"></script>
