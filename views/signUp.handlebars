<div class="min-h-screen flex items-center justify-center bg-stevensBg px-4 py-12">
  <form
    action="/users/signUp"
    method="POST"
    id="signUpForm"
    class="w-full max-w-lg bg-stevensWhite rounded-2xl shadow p-8 space-y-6"
  >
    <h2 class="text-2xl font-heading text-stevensMaroon text-center">
      Create Your Account
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <label for="firstName" class="block text-stevensGray mb-1">First Name</label>
        <input
          type="text"
          id="firstName"
          name="firstName"
          class="w-full px-4 py-2 border border-stevensGray rounded-lg focus:ring-2 focus:ring-stevensMaroon"
        />
      </div>
      <div>
        <label for="lastName" class="block text-stevensGray mb-1">Last Name</label>
        <input
          type="text"
          id="lastName"
          name="lastName"
          class="w-full px-4 py-2 border border-stevensGray rounded-lg focus:ring-2 focus:ring-stevensMaroon"
        />
      </div>
    </div>

    <div>
      <label for="email" class="block text-stevensGray mb-1">Email Address</label>
      <input
        type="email"
        id="email"
        name="email"
        class="w-full px-4 py-2 border border-stevensGray rounded-lg focus:ring-2 focus:ring-stevensMaroon"
      />
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <label for="password" class="block text-stevensGray mb-1">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full px-4 py-2 border border-stevensGray rounded-lg focus:ring-2 focus:ring-stevensMaroon"
        />
      </div>
      <div>
        <label for="confirmPassword" class="block text-stevensGray mb-1">Confirm Password</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          class="w-full px-4 py-2 border border-stevensGray rounded-lg focus:ring-2 focus:ring-stevensMaroon"
        />
      </div>
    </div>

    <button
      type="submit"
      class="w-full bg-stevensMaroon text-stevensWhite py-2 rounded-lg hover:bg-stevensMaroon/90 transition"
    >
      Sign Up
    </button>

    <p class="text-center text-sm text-stevensGray">
      Already have an account?
      <a href="/users/login" class="text-stevensMaroon hover:underline">
        Log in
      </a>
    </p>
  </form>
</div>
<script src="/js/signUpClientSide.js" ></script>
