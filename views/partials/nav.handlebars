{{!-- views/partials/navbar.handlebars --}}

<nav class="bg-stevensWhite border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">

      <!-- Brand -->
      <a href="/" class="text-stevensMaroon text-2xl font-bold">
        DuckHub
      </a>

      <!-- Primary Links -->
      <ul class="flex space-x-6 text-gray-700">
        {{#if user}}
          {{#if (eq user.role "admin")}}
               <li><a href="/forums/"                   class="text-gray-700 hover:text-stevensMaroon">Forums</a></li>
            <li><a href="/departments"               class="text-gray-700 hover:text-stevensMaroon">Departments</a></li>  
            <li><a href="/courses"           class="text-gray-700 hover:text-stevensMaroon">Courses</a></li>
            <li><a href="/" class="text-gray-700 hover:text-stevensMaroon">My Reviews</a></li>
            <li><a href="/userSideCampusResources/categories"                    class="text-gray-700 hover:text-stevensMaroon">Campus Resources</a></li>
            <li><a href="/users/missingRequestDashboard" class="text-gray-700 hover:text-stevensMaroon">Requests</a></li>
          {{else}}
            <li><a href="/forums"                              class="hover:text-stevensMaroon">Forums</a></li>
            <li><a href="/forums/user/{{user._id}}"             class="hover:text-stevensMaroon">My Forums</a></li>
            <li><a href="/departments"                         class="hover:text-stevensMaroon">Departments</a></li>
            <li><a href="/userSideCourses"                     class="hover:text-stevensMaroon">Courses</a></li>
            <li><a href="/userSideCampusResources/categories"  class="hover:text-stevensMaroon">Campus Resources</a></li>
            <li><a href="/userSideCourses/myReviews"           class="hover:text-stevensMaroon">My Reviews</a></li>
          {{/if}}
        {{else}}
          <li><a href="/users/login"  class="hover:text-stevensMaroon">Login</a></li>
          <li><a href="/users/signup" class="hover:text-stevensMaroon">Sign Up</a></li>
        {{/if}}
      </ul>

      <!-- Profile Dropdown -->
      {{#if user}}
        <div class="relative group">
          <button class="flex items-center space-x-2 focus:outline-none">
            {{#if user.profileImage}}
              <img src="{{user.profileImage}}" alt="Avatar" class="h-8 w-8 rounded-full object-cover" />
            {{else}}
              <div class="h-8 w-8 rounded-full bg-stevensGray flex items-center justify-center text-white">
                {{user.firstName.[0]}}{{user.lastName.[0]}}
              </div>
            {{/if}}
            <span class="text-gray-700">{{user.firstName}}</span>
            <svg class="h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <ul class="absolute right-0 mt-2 w-36 bg-white border rounded shadow opacity-0 group-hover:opacity-100 transition-opacity">
            <li><a href="/users/userProfile" class="block px-4 py-2 hover:bg-stevensBg">Profile</a></li>
            <li><a href="/users/logout"      class="block px-4 py-2 hover:bg-stevensBg">Logout</a></li>
          </ul>
        </div>
      {{/if}}

    </div>
  </div>
</nav>
