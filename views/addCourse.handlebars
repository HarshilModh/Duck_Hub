{{!-- views/addCourse.handlebars --}}
<div class="min-h-screen flex items-center justify-center bg-stevensBg px-4 py-12">
  <form
    action="/courses/addCourse"
    method="POST"
    class="w-full max-w-2xl bg-stevensWhite rounded-2xl shadow-lg p-8 space-y-6"
  >
    <h2 class="text-2xl font-heading text-stevensMaroon text-center">
      Add New Course
    </h2>

    <!-- Course Code & Name -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <label for="courseCode" class="block text-stevensGray mb-1">Course Code</label>
        <input
          type="text"
          id="courseCode"
          name="courseCode"
          required
          class="w-full px-4 py-2 border border-stevensGray rounded-lg focus:ring-2 focus:ring-stevensMaroon"
        />
      </div>
      <div>
        <label for="courseName" class="block text-stevensGray mb-1">Course Name</label>
        <input
          type="text"
          id="courseName"
          name="courseName"
          required
          class="w-full px-4 py-2 border border-stevensGray rounded-lg focus:ring-2 focus:ring-stevensMaroon"
        />
      </div>
    </div>

    <!-- Description -->
    <div>
      <label for="courseDescription" class="block text-stevensGray mb-1">Description</label>
      <textarea
        id="courseDescription"
        name="courseDescription"
        rows="4"
        required
        class="w-full px-4 py-2 border border-stevensGray rounded-lg focus:ring-2 focus:ring-stevensMaroon resize-none"
      ></textarea>
    </div>

    <!-- Department Select -->
    <div>
      <label for="departmentId" class="block text-stevensGray mb-1">Department</label>
      <select
        id="departmentId"
        name="departmentId"
        required
        class="w-full px-4 py-2 border border-stevensGray rounded-lg focus:ring-2 focus:ring-stevensMaroon"
      >
        <option value="" disabled selected>Select department</option>
        {{#each departments}}
          <option value="{{this._id}}">{{this.departmentName}}</option>
        {{/each}}
      </select>
    </div>

    <!-- Note about difficulty -->
    <p class="text-sm text-stevensGray italic">
      * Difficulty rating will be calculated automatically after reviews are posted.
    </p>

    <!-- Submit -->
    <button
      type="submit"
      class="w-full bg-stevensMaroon text-stevensWhite py-2 rounded-lg hover:bg-stevensMaroon/90 transition"
    >
      Create Course
    </button>
  </form>
</div>
