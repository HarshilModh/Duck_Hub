<div class="min-h-screen bg-stevensBg flex items-center justify-center p-6">
  <div class="w-full max-w-xl bg-stevensWhite rounded-2xl shadow-lg p-8">
    <h1 class="text-2xl font-heading text-stevensMaroon mb-6">Add New Item</h1>

    <form action="/announcements/add" method="POST" class="space-y-6" id="addAnnouncementForm">
      <div>
        <label for="title" class="block text-stevensGray font-medium mb-1">Title</label>
        <input
          id="title"
          name="title"
          type="text"
          maxlength="50"
          placeholder="Announcement Title"
          class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-stevensMaroon"
          
        />
      </div>

      <div>
        <label for="content" class="block text-stevensGray font-medium mb-1">Content</label>
        <textarea
          id="content"
          name="content"
          rows="6"
          class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-stevensMaroon"
          placeholder="Write your content hereâ€¦"
          
        ></textarea>
      </div>

      <div class="text-right">
        <button
          type="submit"
          class="bg-stevensMaroon text-stevensWhite px-6 py-2 rounded-full hover:bg-stevensMaroon/90 transition"
        >
          Submit
        </button>
      </div>
    </form>
  </div>
</div>
<script src="/js/anouncementClientSIde.js"></script>
