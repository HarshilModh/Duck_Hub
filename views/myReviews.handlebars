{{!-- views/myReviews.handlebars --}}

<div class="container mx-auto px-4 py-8">
  <h1 class="font-heading text-3xl text-stevensMaroon mb-6">My Reviews</h1>

  {{#if courseReviews.length}}
    <div class="space-y-4">
      {{#each courseReviews}}
        <div class="flex items-center justify-between bg-stevensWhite rounded-2xl shadow p-4">
          <div>
            <p class="text-gray-700 mb-1">{{this.review}}</p>
            <p class="text-sm text-gray-500">
              {{this.courseId.courseCode}} &mdash; {{this.courseId.courseName}}
            </p>
          </div>
          <div class="flex space-x-2">
            <a
              href="/userSideCourses/editReview/{{this._id}}""
              class="bg-stevensMaroon text-stevensWhite px-4 py-2 rounded-lg hover:bg-stevensMaroon/90 transition"
            >
              Edit
            </a>
           
        <a
              href="/userSideCourses/deleteReview/{{this._id}}"
              class="bg-red-600 text-stevensWhite px-4 py-2 rounded-lg hover:bg-red-700 transition"
              onclick="return confirm('Delete this review?');"
            >
              Delete
            </a>
            
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="text-center italic text-stevensGray">You havenâ€™t written any reviews yet.</p>
  {{/if}}
</div>
