<div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold text-stevensMaroon mb-6">Create a New Forum</h1>

  <form action="/forums" method="POST" enctype="multipart/form-data" class="space-y-6">
    <!-- User ID (can be hidden or pre-filled) -->
    <input type="hidden" name="userId" value="67fd9a1593edbb521ccbfab2" /> <!-- Replace with session value if needed -->

    <!-- Title -->
    <div>
      <label for="title" class="block text-sm font-medium text-stevensGray">Title</label>
      <input
        type="text"
        name="title"
        id="title"
        class="mt-1 block w-full border border-gray-300 rounded-md p-2"
        required
      />
    </div>

    <!-- Content -->
    <div>
      <label for="content" class="block text-sm font-medium text-stevensGray">Content</label>
      <textarea
        name="content"
        id="content"
        rows="4"
        class="mt-1 block w-full border border-gray-300 rounded-md p-2"
        required
      ></textarea>
    </div>

    <!-- Tags -->
    <div>
      <label for="tags" class="block text-sm font-medium text-stevensGray">Tags (comma-separated)</label>
      <input
        type="text"
        name="tags"
        id="tags"
        class="mt-1 block w-full border border-gray-300 rounded-md p-2"
        placeholder="example: webdev, tailwind, nodejs"
      />
    </div>

    <!-- Image Upload -->
    <div>
      <label for="images" class="block text-sm font-medium text-stevensGray">Upload Images (Max: 5)</label>
      <input
        type="file"
        name="images"
        id="images"
        accept="image/*"
        multiple
        class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-stevensMaroon file:text-white hover:file:bg-red-700"
      />
    </div>

    <!-- Submit Button -->
    <div class="text-right">
      <button
        type="submit"
        class="bg-stevensMaroon text-white px-6 py-2 rounded hover:bg-red-700 transition"
      >
        Post Forum
      </button>
    </div>
  </form>
</div>
