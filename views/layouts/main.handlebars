<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>

  <!-- Tailwind via CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Optional: small theme extension for a cohesive palette & font  -->
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#2563eb',   // Tailwind indigo-600, but aliased for clarity
            accent:  '#14b8a6',   // Tailwind teal-500
            muted:   '#f1f5f9'    // slate-100 for subtle backgrounds
          },
          fontFamily: {
            sans: ['Inter', 'sans-serif']   // crisp, modern default
          }
        }
      }
    };
  </script>

  <!-- Toastify CSS & JS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</head>

<body class="min-h-screen bg-muted font-sans text-gray-800 antialiased">

  <!-- Header -->
  <header class="bg-white/80 backdrop-blur py-4 shadow-sm">
    <div class="mx-auto max-w-6xl px-4 flex items-center justify-between">
      <h1 class="text-xl font-semibold tracking-tight">{{title}}</h1>

      <!-- Simple nav; add or remove links as needed -->
      <nav class="space-x-4 text-sm">
        <a href="/"      class="text-gray-600 hover:text-primary transition">Home</a>
        <a href="/about" class="text-gray-600 hover:text-primary transition">About</a>
      </nav>
    </div>
  </header>

  <!-- Main content injected from the server -->
  <main class="mx-auto max-w-6xl px-4 py-10">
    {{{body}}}
  </main>

  <!-- Footer -->
  <footer class="mt-16 py-6 text-center text-sm text-gray-500">
    Â© {{year}} - All rights reserved.
  </footer>

  <!-- Toast initialization -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const toast = {{{json toast}}};
      if (toast && toast.message) {
        Toastify({
          text: toast.message,
          duration: 4000,
          gravity: 'top',
          position: 'right',
          backgroundColor: toast.type === 'error' ? '#ef4444' : '#22c55e',
          close: true
        }).showToast();
      }
    });
  </script>
</body>
</html>
