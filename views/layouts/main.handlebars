<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>

  <!-- Rubik font from Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap"
    rel="stylesheet"
  />

  <!-- Tailwind Play CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            stevensMaroon: '#9D1535',
            stevensGray:   '#949594',
            stevensWhite:  '#FFFFFE',
            stevensBg:     '#F1F5F9'
          },
          fontFamily: {
            body:    ['Rubik','sans-serif'],
            heading: ['Rubik','sans-serif']
          }
        }
      }
    };
  </script>
</head>
<body class="min-h-screen bg-stevensBg font-body text-stevensMaroon">

<header class="bg-stevensWhite shadow px-6 py-4">
  <div class="max-w-6xl mx-auto flex items-center justify-between">
    <!-- Stevens Logo (hosted externally) -->
    <a href="/">
      <img
        src="https://seeklogo.com/images/S/stevens-institute-of-technology-logo-2C58433A3D-seeklogo.com.png"
        alt="Stevens Institute of Technology Logo"
        class="h-10 mr-4"
      />
    </a> 

    <!-- DuckHub Title -->
    <h1 class="font-heading text-2xl text-stevensMaroon">DuckHub</h1>

    <!-- Navigation -->
    <nav class="space-x-4 text-sm text-stevensGray">
      <a href="/" class="hover:text-stevensMaroon">Home</a>
      <a href="/about" class="hover:text-stevensMaroon">About</a>
    </nav>
  </div>
</header>

  <!-- Main Content -->
  <main class="max-w-6xl mx-auto px-6 py-10">
    {{{body}}}
  </main>

  <!-- Footer -->
  <footer class="text-center text-stevensGray py-6">
    Â© {{year}} Stevens Institute of Technology
  </footer>

  <!-- Toastify -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
  />
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const toast = {{{json toast}}};
      if (toast && toast.message) {
        Toastify({
          text: toast.message,
          duration: 4000,
          gravity: 'top',
          position: 'right',
          backgroundColor:
            toast.type === 'error' ? '#EF4444' : '#22C55E',
          close: true
        }).showToast();
      }
    });
  </script>
</body>
</html>
