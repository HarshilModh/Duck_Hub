<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/public/css/dashboard.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Saira&family=Bitter&family=IBM+Plex+Sans&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>

    <!-- SIDEBAR -->
    <aside class="sidebar" id="sidebar">
      <nav class="sidebar-nav">
        <ul>
          <li><a href="/courses"><img
                src="/public/images/icons/courses.png"
                alt="Courses"
                class="sidebar-icon"
              />Courses</a></li>
          <li><a href="/my-forums"><img
                src="/public/images/icons/myForums.png"
                alt="Forums"
                class="sidebar-icon"
              />My Forums</a></li>
          <li><a href="/my-reviews"><img
                src="/public/images/icons/myReviews.png"
                alt="Reviews"
                class="sidebar-icon"
              />My Reviews</a></li>
          <li><a href="/campus-resources"><img
                src="/public/images/icons/campusResources.png"
                alt="Campus Resources"
                class="sidebar-icon"
              />Campus Resources</a></li>
          <li><a href="/academic-resources"><img
                src="/public/images/icons/academicResources.png"
                alt="Academic Resources"
                class="sidebar-icon"
              />Academic Resources</a></li>
        </ul>
      </nav>
    </aside>

    <!-- HEADER -->
    <header class="dashboard-header">
      <!-- Burger icon always visible -->
      <div class="burger-menu" id="burgerMenu">&#9776;</div>

      <!-- Search bar -->
      <div class="search-container">
        <input type="text" placeholder="Search..." class="search-input" />
      </div>

      <!-- Notification and Profile Icons -->
      <div class="header-icons">
        <button class="icon-button" id="notificationsBtn">
          <img
            src="/public/images/icons/bell.svg"
            alt="Notifications"
            class="icon-img"
          />
        </button>

        <!-- PROFILE + DROPDOWN -->
        <div class="profile-container" id="profileContainer">
          <button class="profile-button" id="profileBtn">
            <img
              src="/public/images/icons/duck.png"
              alt="User Profile"
              class="profile-img"
            />
          </button>
          <div class="profile-dropdown" id="profileDropdown">
            <ul>
              <li><a href="/profile">My Profile</a></li>
              <li><a href="/settings">Settings</a></li>
              <li><a href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="dashboard-content">
      {{{body}}}
    </main>

    <!-- JS: Sidebar toggle only -->
    <script>
      const burger = document.getElementById('burgerMenu'); const sidebar =
      document.getElementById('sidebar'); burger.addEventListener('click', () =>
      { sidebar.classList.toggle('sidebar-open'); }); const profileBtn =
      document.getElementById('profileBtn'); const profileDropdown =
      document.getElementById('profileDropdown');
      profileBtn.addEventListener('click', e => { e.stopPropagation(); if
      (profileDropdown.style.display === 'block') {
      profileDropdown.style.display = 'none'; } else {
      profileDropdown.style.display = 'block'; } });
    </script>
  </body>
</html>