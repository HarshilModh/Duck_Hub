<div class="min-h-screen flex items-center justify-center bg-muted px-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8 text-center">
    <!-- Greeting -->
    <h1 class="text-3xl font-semibold text-gray-800 mb-4">
      Welcome, {{firstName}} {{lastName}}
    </h1>

    <!-- Email -->
    <p class="text-gray-600 mb-6">
      Your email: <span class="font-medium text-gray-800">{{email}}</span>
    </p>

    <!-- Logout Button -->
    <a
      href="/users/logout"
      class="inline-block bg-primary text-white font-medium px-6 py-2 rounded-lg hover:bg-primary/90 transition"
    >
      Logout
    </a>
  </div>
</div>
