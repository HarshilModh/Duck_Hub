{{!-- views/login.handlebars --}}
<div class="min-h-screen bg-stevensBg flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-md">
    <div class="bg-stevensWhite shadow-lg rounded-2xl overflow-hidden">
      <div class="px-8 py-10">
        <h2 class="text-center text-3xl font-heading text-stevensMaroon mb-8">
          Welcome Back
        </h2>

        {{!-- Toast Message --}}
        {{#if toast}}
          <div class="mb-6 px-4 py-2 rounded text-sm {{#eq toast.type "error"}}bg-red-100 text-red-700{{else}}bg-green-100 text-green-700{{/eq}}">
            {{toast.message}}
          </div>
        {{/if}}

        <form action="/users/login" method="POST"  class="space-y-6" id="loginForm">
          <div>
            <label for="email" class="block text-stevensGray mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              
              placeholder="you@example.com"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-stevensMaroon transition"
            />
          </div>

          <div>
            <label for="password" class="block text-stevensGray mb-1">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              
              placeholder="••••••••"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-stevensMaroon transition"
            />
            <p class="text-right mt-1">
              <a href="/forgot-password" class="text-sm text-stevensMaroon hover:underline">
                Forgot Password?
              </a>
            </p>
          </div>

          <button
            type="submit"
            class="w-full bg-stevensMaroon text-stevensWhite py-2 rounded-full hover:bg-stevensMaroon/90 transition"
          >
            Log In
          </button>
        </form>

        <div class="my-6 flex items-center">
          <hr class="flex-grow border-gray-300" />
          <span class="px-2 text-stevensGray">or</span>
          <hr class="flex-grow border-gray-300" />
        </div>

        <a
          href="/auth/google"
          class="w-full inline-flex items-center justify-center border border-gray-300 rounded-full px-4 py-2 hover:bg-gray-100 transition"
        >
          <!-- Official Google "G" logo from Google's CDN -->
          <img
            src="https://developers.google.com/identity/images/g-logo.png"
            alt="Google logo"
            class="h-5 w-5 mr-2"
          />
          <span class="text-gray-700">Sign in with Google</span>
        </a>

        <p class="mt-8 text-center text-sm text-stevensGray">
          Don’t have an account?
          <a href="/users/signUp" class="text-stevensMaroon font-medium hover:underline">
            Sign up
          </a>
        </p>
      </div>
    </div>
  </div>
</div>
<script src="../public/js/loginClientSide.js"></script>
