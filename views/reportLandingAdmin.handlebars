<div class="admin-reports-container">
  {{#each reports}}
    <section class="report-section">
      <h2 class="section-title">{{@key}}</h2>

      {{#if this.length}}
        {{#each this}}
          <div class="report-block">
            <div class="report-content">
              <strong class="report-title">
                {{#if content.title}}
                  {{content.title}}
                {{else if content.question}}
                  {{content.question}}
                {{else}}
                  {{content.name}}
                {{/if}}
              </strong>
              <p class="report-forum">
                {{#if content.title}}
                  {{content.title}}
                {{else if content.question}}
                  {{content.question}}
                {{else}}
                  {{content.name}}
                {{/if}}
              </p>
              <p class="report-reason">{{reason}}</p>
            </div>
            <div class="report-action">
              <button class="action-button">View report</button>
              <button class="action-button">Take action</button>
            </div>
          </div>
        {{/each}}
      {{else}}
        <p class="no-reports">No reports in this category.</p>
      {{/if}}
    </section>
  {{/each}}
</div>
