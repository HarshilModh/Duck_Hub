{{!-- views/departments.handlebars --}}

<div class="min-h-screen bg-stevensBg font-body text-stevensMaroon">
  <div class="max-w-6xl mx-auto px-6 py-10">
    <h1 class="font-heading text-3xl text-stevensMaroon mb-6">
      Departments
    </h1>
    <form action="/departments/searchDepartmentForUser" method="POST" class="mb-8 max-w-md mx-auto">
      <div class="flex">
        <input
          type="text"
          name="search"
          value="{{search}}"
          placeholder="Search departmentsâ€¦"
          class="flex-1 px-4 py-2 border border-stevensGray rounded-l-lg focus:outline-none focus:ring-2 focus:ring-stevensMaroon"
        />
        <button
          type="submit"
          class="bg-stevensMaroon text-stevensWhite px-4 rounded-r-lg hover:bg-stevensMaroon/90 transition"
        >
          Search
        </button>
      </div>
    </form>
    {{#if Filtered}}
      <div class="mb-4">
        <h2 class="text-xl font-heading">Search Results</h2>
      </div>
      <div class="mb-4">
        <a
          href="/departments/userSideDepartment"
          class="bg-stevensMaroon text-stevensWhite px-4 py-2 rounded-lg hover:bg-stevensMaroon/90 transition"
        >
          Reset Search
        </a>
      </div>
    {{/if}}
        
    {{#if departments.length}}
      <div class="space-y-4">
        {{#each departments}}
          <div class="flex items-center justify-between bg-stevensWhite rounded-2xl shadow p-4">
            
            <span class="text-stevensMaroon font-heading">
              {{this.departmentName}}
            </span>

            <a
              href="/userSideCourses/departmentCourses/{{this._id}}"
              class="inline-flex items-center bg-stevensMaroon text-stevensWhite px-4 py-2 rounded-full hover:bg-stevensMaroon/90 transition"
            >
              View Courses
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>

          </div>
        {{/each}}
      </div>
    {{else}}
      <p class="text-stevensGray italic">No departments found.</p>
    {{/if}}
  </div>
</div>
<script src="/js/deptUserSearchClientSide.js"></script>