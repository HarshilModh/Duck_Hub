<form
  action="/addCourseReview/{{courseId}}"
  method="post"
  class="max-w-xl mx-auto bg-stevensWhite rounded-2xl shadow-lg p-8 space-y-6"
>
  <h2 class="text-2xl font-heading text-stevensMaroon">Add Review</h2>

  <!-- Course Info (read-only) -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <label for="courseCode" class="block text-stevensGray font-medium mb-1">Course Code</label>
      <input
        type="text" id="courseCode" name="courseCode"
        value="{{course.courseCode}}" readonly
        class="w-full bg-gray-100 border border-gray-300 rounded-lg p-3 cursor-not-allowed"
      />
    </div>
    <div>
      <label for="courseName" class="block text-stevensGray font-medium mb-1">Course Name</label>
      <input
        type="text" id="courseName" name="courseName"
        value="{{course.courseName}}" readonly
        class="w-full bg-gray-100 border border-gray-300 rounded-lg p-3 cursor-not-allowed"
      />
    </div>
  </div>

  <!-- Review Text -->
  <div>
    <label for="review" class="block text-stevensGray font-medium mb-1">Review</label>
    <textarea
      id="review" name="review" rows="4"
      placeholder="Write your review…"
      class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-stevensMaroon"
    ></textarea>
  </div>

  <!-- Overall Rating Stars -->
  <div>
    <p class="text-stevensGray font-medium mb-1">Overall Rating</p>
    <div class="flex space-x-1">
      <!-- generate 5 radios -->
      <label class="cursor-pointer text-2xl text-gray-300 hover:text-stevensMaroon">
        <input type="radio" name="overallRating" value="1" class="hidden" />★
      </label>
      <label class="cursor-pointer text-2xl text-gray-300 hover:text-stevensMaroon">
        <input type="radio" name="overallRating" value="2" class="hidden" />★
      </label>
      <label class="cursor-pointer text-2xl text-gray-300 hover:text-stevensMaroon">
        <input type="radio" name="overallRating" value="3" class="hidden" />★
      </label>
      <label class="cursor-pointer text-2xl text-gray-300 hover:text-stevensMaroon">
        <input type="radio" name="overallRating" value="4" class="hidden" />★
      </label>
      <label class="cursor-pointer text-2xl text-gray-300 hover:text-stevensMaroon">
        <input type="radio" name="overallRating" value="5" class="hidden" />★
      </label>
    </div>
  </div>

  <!-- Difficulty Rating Stars (1–3) -->
  <div>
    <p class="text-stevensGray font-medium mb-1">Difficulty</p>
    <div class="flex space-x-1">
      <label class="cursor-pointer text-2xl text-gray-300 hover:text-stevensMaroon">
        <input type="radio" name="difficultyRating" value="1" class="hidden" />★
      </label>
      <label class="cursor-pointer text-2xl text-gray-300 hover:text-stevensMaroon">
        <input type="radio" name="difficultyRating" value="2" class="hidden" />★
      </label>
      <label class="cursor-pointer text-2xl text-gray-300 hover:text-stevensMaroon">
        <input type="radio" name="difficultyRating" value="3" class="hidden" />★
      </label>
    </div>
  </div>

  <!-- Submit -->
  <div class="text-right">
    <button
      type="submit"
      class="bg-stevensMaroon text-stevensWhite px-6 py-2 rounded-full hover:bg-stevensMaroon/90 transition"
    >
      Submit Review
    </button>
  </div>
</form>
