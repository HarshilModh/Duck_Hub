<div class="max-w-lg mx-auto bg-white p-6 shadow-md rounded-lg">
  <h2 class="text-2xl font-bold text-stevensMaroon mb-4">Edit Course</h2>
  <form
    id="editCourseForm"
    action="/courses/{{courseId}}"
    method="POST"
    class="space-y-4"
  >
    <input type="hidden" name="_method" value="PUT" />

    <div>
      <label for="courseCode" class="block text-gray-700">Course Code</label>
      <input
        type="text"
        id="courseCode"
        name="courseCode"
        value="{{courseCode}}"
        placeholder="e.g., CS101"
        class="w-full border border-gray-300 rounded p-2"
      />
    </div>

    <div>
      <label for="courseName" class="block text-gray-700">Course Name</label>
      <input
        type="text"
        id="courseName"
        name="courseName"
        value="{{courseName}}"
        placeholder="Course Name"
        class="w-full border border-gray-300 rounded p-2"
      />
    </div>

    <div>
      <label for="courseDescription" class="block text-gray-700">Course Description</label>
      <textarea
        id="courseDescription"
        name="courseDescription"
        rows="4"
        placeholder="Describe the course..."
        class="w-full border border-gray-300 rounded p-2"
      >{{courseDescription}}</textarea>
    </div>

    <div>
      <label for="departmentId" class="block text-gray-700">Department</label>
      <select
        id="departmentId"
        name="departmentId"
        class="w-full border border-gray-300 rounded p-2"
      >
        <option value="">Select department</option>
        {{#each departments}}
          <option
            value="{{this._id}}"
            {{#if (eq this._id ../course.departmentId)}}selected{{/if}}
          >
            {{this.departmentName}}
          </option>
        {{/each}}
      </select>
    </div>

    <div class="flex justify-end">
      <button
        type="submit"
        class="bg-stevensMaroon text-white px-4 py-2 rounded hover:bg-stevensMaroon/80 transition"
      >
        Update Course
      </button>
    </div>
  </form>
</div>
