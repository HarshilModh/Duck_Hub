{{!-- views/changePassword.handlebars --}}

<div class="min-h-screen bg-stevensBg flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-md bg-stevensWhite rounded-2xl shadow-lg p-8 space-y-6">
    
    <h2 class="text-2xl font-heading text-stevensMaroon text-center">
      Change Password
    </h2>

    <form action="/users/changePassword" method="POST" class="space-y-4">
    <input type="hidden" name="_method" value="PUT">
      <!-- Current Password -->
      <div>
        <label for="currentPassword" class="block text-stevensGray font-medium mb-2">
          Current Password
        </label>
        <input
          type="password"
          id="currentPassword"
          name="currentPassword"
          
          placeholder="••••••••"
          class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-stevensMaroon"
        />
      </div>

      <!-- New Password -->
      <div>
        <label for="newPassword" class="block text-stevensGray font-medium mb-2">
          New Password
        </label>
        <input
          type="password"
          id="newPassword"
          name="newPassword"
          
          placeholder="••••••••"
          class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-stevensMaroon"
        />
      </div>

      <!-- Confirm New Password -->
      <div>
        <label for="confirmPassword" class="block text-stevensGray font-medium mb-2">
          Confirm New Password
        </label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          
          placeholder="••••••••"
          class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-stevensMaroon"
        />
      </div>

      <!-- Submit Button -->
      <div class="text-right">
        <button
          type="submit"
          class="bg-stevensMaroon text-stevensWhite px-6 py-2 rounded-lg hover:bg-stevensMaroon/90 transition focus:outline-none focus:ring-2 focus:ring-stevensMaroon"
        >
          Update Password
        </button>
      </div>
    </form>

  </div>
</div>
